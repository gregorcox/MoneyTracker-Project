<div class="container">

<h1>merchants</h1>

<% for merchant in @merchants %>
  <p><strong>Name:</strong> <a href="/merchants/<%=merchant.id %>"><%= merchant.name %></a> (<a href="/merchants/<%=merchant.id  %>/edit">Edit</a>)</p>
  <p><form action="/merchants/<%= merchant.id %>/delete" method="POST">
      <input type="submit" value="Delete" /></p>
<% end %>

<p> <a href="/merchants/new"> Add a new merchant</a> </p>


<table class="merchant_table">
<% for merchant in @merchants %>
  <tr>
    <td class="merchant_link"><a href="/merchants/<%=merchant.id %>"><%= merchant.name %></a> </td>
  </tr>
<% end %>
</table>

</div>
